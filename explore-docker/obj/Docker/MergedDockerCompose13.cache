services:
  webapi:
    build:
      context: C:\Tarun\poc\aks\explore-docker\explore-docker
      dockerfile: webApi/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: webApi
    container_name: webApi
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: https://+:443;http://+:80
    image: webapi
    labels:
      com.microsoft.visual-studio.project-name: webApi
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages  "/app/webApi.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 51080
      target: 80
    - published: 52443
      target: 443
    tty: true
    volumes:
    - C:\Users\v-tjain\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\v-tjain\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\v-tjain\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
  webapp:
    build:
      context: C:\Tarun\poc\aks\explore-docker\explore-docker
      dockerfile: WebApp/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: WebApp
    container_name: WebApp
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: https://+:443;http://+:80
      WebApiBaseAddress: http://webapi
    image: webapp
    labels:
      com.microsoft.visual-studio.project-name: WebApp
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages  "/app/WebApp.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 50080
      target: 80
    - published: 50443
      target: 443
    tty: true
    volumes:
    - C:\Users\v-tjain\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\v-tjain\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\v-tjain\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
version: '3.4'